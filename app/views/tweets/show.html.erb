<p id="notice"><%= notice %></p>
<div class="well">

	<p>
	  <strong>Message:</strong>
	  <%= @tweet.message.html_safe %>
	</p>

	<p>
	  <strong>User:</strong>
	  <%= image_tag tweet.user.avatar.url, size: 25 %> <%= link_to "@#{@tweet.user.username}", show_user_path(id: @tweet.user.id) %>
	</p>

</div>

<%= link_to 'Edit', edit_tweet_path(@tweet), class: "btn btn-warning" %> |
<%= link_to 'Back', tweets_path, class: "btn btn-success" %>
