<div>
  <h1>All Tweets with: <%= @tag.phrase %></h1>
</div>

<div class="row">
  <!-- a place for current user stats -->
  <div>
    <% @tag.tweets.order(created_at: :desc).each do |tweet| %>
      <p><%= tweet.user.name %> • <%= "@#{tweet.user.username}" %> • <%= Time.now - tweet.created_at < 86400 ? "#{time_ago_in_words(tweet.created_at)} ago" : tweet.created_at.strftime('%b %e') %> said: <%= tweet.message.html_safe %></p>
    <% end %>
  </div>
</div>
